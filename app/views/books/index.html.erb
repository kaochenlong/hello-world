<p id="notice"><%= notice %></p>

<h1>Books</h1>

<%= link_to 'New Book', new_book_path, class:'btn btn-outline-secondary'%>

<table class='table table-striped mt-1'>
  <thead class="thead-dark">
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Publish date</th>
      <th>Isbn</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.content %></td>
        <td><%= book.publish_date %></td>
        <td><%= book.isbn %></td>
        <td><%= link_to 'Show', book, class: 'btn btn-outline-secondary btn-sm' %></td>
        <td><%= link_to 'Edit', edit_book_path(book), class: 'btn btn-outline-secondary btn-sm' %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-secondary btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

